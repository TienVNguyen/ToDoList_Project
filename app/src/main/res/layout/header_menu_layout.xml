<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundHeader"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <!--Remove - Edit Icon -->
        <ImageView
            android:id="@+id/removeEditIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:contentDescription="@string/remove_icon_hint"
            android:src="@drawable/remove_edit_icon" />

        <!-- App Logo -->
        <TextView
            android:id="@+id/appLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/to_do_list"
            android:textSize="25sp"
            android:textStyle="bold" />

        <!-- Add - Save Icon -->
        <ImageView
            android:id="@+id/addSaveIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:contentDescription="@string/add_icon_hint"
            android:src="@drawable/add_save_icon" />

    </RelativeLayout>
</LinearLayout>